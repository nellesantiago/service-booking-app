<%= form_with(model: service, url: url) do |form| %>
  <%= render "shared/error_messages", object: service %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :details, style: "display: block" %>
    <%= form.text_area :details %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label :service_type, style: "display: block" %>
    <%= form.select :service_type, ["service", "add_on"], selected: "service" %>
  </div>

  <div>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.submit submit %>
  </div>
<% end %>
