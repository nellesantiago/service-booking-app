<div class="profile">
  <div class="bg"></div>
  <div class="top">
    <%= link_to "< Profile", categories_path %>
  </div>
  <div class="container">
    <div class="user">
      <i class="fa-regular fa-circle-user"></i>
      <div class="email"><%= current_user.email %>
      </div>
    </div>
    <div class="buttons">
      <%= link_to "Settings", edit_user_path(@user) %>
      <%= link_to "Log out", logout_path, data: { turbo_method: :delete } %>
    </div>
  </div>
</div>
